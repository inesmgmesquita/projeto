---
import '../styles/style.css';
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
const pageTitle = "Case Studies";
---

<Layout pageTitle={pageTitle}>
  <Nav />
  <main>
    <div class="blog-content"> 
      <div class="blog-grid">
        <h2>Case Studies</h2>
        <section class="case-study"> 
          <div class="cards-grid-layout"> 
            <a href="/posts/post-1" class="card"> 
              <div class="card-content"> 
                <figure class="figure-thumbnail"> 
                  <img src="/public/assets/img/fine-arts-faculty-website-cover.png" alt="Um cachorro latindo." />
                </figure> 
                <h4>Instagram New Feature</h4> 
                <div class="tags"> 
                  <span class="card-tags">ux/ui</span> 
                  <span class="card-tags">ux research</span> 
                  <span class="card-tags">motion graphics</span> 
                </div> 
              </div> 
            </a> 
            <a href="/posts/post-2" class="card"> 
              <div class="card-content"> 
                <figure class="figure-thumbnail"> 
                  <img src="/assets/img/ecommerce-website-cover.png" alt="White background with two 3D mobiles, featuring the titles 'Instagram New Feature' and 'Search Control' in black"> 
                  <div class="overlay-card"></div>
                </figure> 
                <h4>Instagram New Feature</h4> 
                <div class="tags"> 
                  <span class="card-tags">ux/ui</span> 
                  <span class="card-tags">ux research</span> 
                  <span class="card-tags">motion graphics</span> 
                </div> 
              </div> 
            </a> 
            <a href="/posts/post-3" class="card"> 
              <div class="card-content"> 
                <figure class="figure-thumbnail"> 
                  <img src="/assets/img/digipath-cover.png" alt="White background with two 3D mobiles, featuring the titles 'Instagram New Feature' and 'Search Control' in black"> 
                </figure> 
                <h4>Instagram New Feature</h4> 
                <div class="tags"> 
                  <span class="card-tags">ux/ui</span> 
                  <span class="card-tags">ux research</span> 
                  <span class="card-tags">motion graphics</span> 
                </div> 
              </div> 
            </a> 
          </div> 
        </section>
      </div>
    </div>
  </main>
<Footer />
</Layout>





